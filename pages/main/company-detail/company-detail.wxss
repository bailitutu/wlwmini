@import "../index/index.wxss";

page{
    background: #f4f4f4;
}
._company-header{
    border-bottom-left-radius:16rpx;
    border-bottom-right-radius:16rpx;
}

._company-logo{
    width:100rpx;
    height: 100rpx;
	background-size: 100% auto;
	background-position: center;
	background-repeat: no-repeat;
}
._company-label{
    border:1px solid #ffffff;
    padding:5rpx;
}
.van-tab--active{
    color: #0d8df9 !important;
}
._product-btn{
    line-height: 46rpx;
}
._product-btn image{
    width:46rpx;
    height:46rpx;
    margin-right: 18rpx;
}
