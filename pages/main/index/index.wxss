.body{
    padding-bottom:100rpx;
}

._header-bar{
    width: 100%;
    height:170rpx;
    padding:10rpx 15rpx ;
    white-space: nowrap;
}
._header-bar-item{
    width:236rpx;
    height:120rpx;
    margin:15rpx;
    position: relative;
    display: inline-block;
}
._header-bar-item ._header-bar-icon{
    width:50rpx;
    height:50rpx;
    vertical-align: middle;
    margin-right:45rpx;
}
._header-bar-cell{
    position: absolute;
    top:0;
    left:0;
    z-index: 1;
    line-height: 120rpx;
    text-align: center;
}

/*列表*/

._section{
    border-top:20rpx solid #f4f4f4;
}
._icon-select{
    width: 30rpx;
    height: 30rpx;
}

._filter-cell{
    padding: 25rpx 30rpx;
    min-width:120rpx;
}

._product-image{
    width: 160rpx;
    height:160rpx;
}
._product-info{
    max-width:360rpx;
}
._plan-info{
    max-width:510rpx;
}
._product-label{
    min-width:150rpx;
    text-align: right;
}

._purchase-price{
    text-align: right;
}
._purchase-title{
    width:500rpx;
}
._activity-image{
    width:100%;
    height:320rpx;
}
._company-image{
    width:330rpx;
    height:330rpx;
}
._company-item{
    box-sizing: border-box;
    width:50%;
    padding-right:20rpx;
}
._company-item:nth-of-type(2n){
    padding-right:0;
    padding-left:20rpx;
}

/*筛选弹层*/
._filter-popup{
    height:100vh;
    width: 660rpx;
}


._filter-btn{
    width: 180rpx;
    height: 88rpx;
    line-height:88rpx;
    text-align: center;
    margin-top: 20rpx;
    margin-right: 20rpx;
}
._filter-btn.active{
    background: #0d8df9;
}
._filter-btn:nth-of-type(3n){
    margin-right: 0;
}
._action-btn{
    width: 72px;
    height: 32px;
    line-height: 32px;
    text-align: center;
    margin-top: 10px;
    margin-right: 10px;
}


